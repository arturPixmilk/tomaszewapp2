<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:weightSum="10"
              android:padding="5dp">
    <ImageView
            android:id="@+id/itemImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_image_black_24dp"
            android:layout_weight="7"

    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemName"
            android:text="Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"

    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemType"
            android:text="Type"
            android:textSize="15sp"
            android:layout_marginTop="10sp"
    />
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/itemRadius"
            android:text="Radius"
            android:textSize="15sp"
            android:layout_marginTop="10sp"

    />
    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content">
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Edit"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Delete"/>
    </LinearLayout>



</LinearLayout>